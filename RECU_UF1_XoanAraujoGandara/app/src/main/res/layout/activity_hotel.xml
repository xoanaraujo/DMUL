<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.activity.HotelActivity">

    <ImageButton
        android:id="@+id/iBtnActHotelAddHabitacion"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/insert_bg"
        android:src="@drawable/add_32"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iBtnActHotelEdit"
        app:layout_constraintStart_toStartOf="@+id/spActHotelHoteles" />

    <Spinner
        android:id="@+id/spActHotelHoteles"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/iBtnActHotelEdit"
        app:layout_constraintEnd_toStartOf="@+id/iBtnActHotelEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iBtnActHotelEdit" />

    <ListView
        android:id="@+id/lvActHotelHabitaciones"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/iBtnActHotelAddHabitacion"
        app:layout_constraintEnd_toEndOf="@+id/iBtnActHotelEdit"
        app:layout_constraintStart_toStartOf="@+id/spActHotelHoteles"
        app:layout_constraintTop_toBottomOf="@+id/spActHotelHoteles" />

    <ImageButton
        android:id="@+id/iBtnActHotelEdit"
        android:layout_width="64dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/update_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/edit_32" />
</androidx.constraintlayout.widget.ConstraintLayout>