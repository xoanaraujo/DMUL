        app:layout_constraintStart_toStartOf="@+id/fragmentBtnLimitado"
        app:layout_constraintTop_toBottomOf="@+id/fragmentBtnLimitado" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentBtnLimitado"
        android:name="com.example.elecciones.FRAGMENTS.BtnLimitadoFragment"
        android:layout_width="165dp"
        android:layout_height="65dp"
        android:layout_marginTop="204dp"
        app:layout_constraintEnd_toEndOf="@+id/spnCandidatos"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="@+id/spnCandidatos"
        app:layout_constraintTop_toBottomOf="@+id/spnCandidatos" />
