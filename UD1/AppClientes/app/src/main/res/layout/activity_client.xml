<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientActivity">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:text="Nombre"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFirstSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Apellidos"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />

    <TextView
        android:id="@+id/tvFirstSurname3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="NIF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFirstSurname" />

    <TextView
        android:id="@+id/tvFirstSurname4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Provincia"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFirstSurname3" />

    <TextView
        android:id="@+id/tvFirstSurname5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Latitud"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFirstSurname4" />

    <TextView
        android:id="@+id/tvFirstSurname6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Longitud"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFirstSurname5" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:ems="10"
        android:hint="Pedro"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/tvName"
        app:layout_constraintStart_toEndOf="@+id/tvName"
        app:layout_constraintTop_toTopOf="@+id/tvName" />

    <EditText
        android:id="@+id/etSurname"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Gonzalez Garcia"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/tvFirstSurname"
        app:layout_constraintEnd_toEndOf="@+id/etName"
        app:layout_constraintTop_toTopOf="@+id/tvFirstSurname" />

    <EditText
        android:id="@+id/etNIF"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="12345678A"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/tvFirstSurname3"
        app:layout_constraintEnd_toEndOf="@+id/etSurname"
        app:layout_constraintTop_toTopOf="@+id/tvFirstSurname3" />

    <Spinner
        android:id="@+id/spProv"
        android:layout_width="210dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvFirstSurname4"
        app:layout_constraintEnd_toEndOf="@+id/etNIF"
        app:layout_constraintTop_toTopOf="@+id/tvFirstSurname4" />

    <CheckBox
        android:id="@+id/cbVIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="VIP"
        app:layout_constraintEnd_toEndOf="@+id/spProv"
        app:layout_constraintTop_toBottomOf="@+id/etLog" />

    <EditText
        android:id="@+id/etLat"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="0.0"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="@+id/tvFirstSurname5"
        app:layout_constraintEnd_toEndOf="@+id/spProv"
        app:layout_constraintTop_toTopOf="@+id/tvFirstSurname5" />

    <EditText
        android:id="@+id/etLog"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="0.0"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="@+id/tvFirstSurname6"
        app:layout_constraintEnd_toEndOf="@+id/etLat"
        app:layout_constraintTop_toTopOf="@+id/tvFirstSurname6" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginBottom="64dp"
        android:text="Guardar"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>