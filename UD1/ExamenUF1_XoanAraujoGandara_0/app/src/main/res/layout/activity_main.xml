<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etErrores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="Numero Errores"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnERC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="ERC"
        app:layout_constraintEnd_toEndOf="@+id/etErrores"
        app:layout_constraintStart_toStartOf="@+id/etErrores"
        app:layout_constraintTop_toBottomOf="@+id/etErrores" />

    <Button
        android:id="@+id/btnNEB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="NEB"
        app:layout_constraintEnd_toEndOf="@+id/btnERC"
        app:layout_constraintStart_toStartOf="@+id/btnERC"
        app:layout_constraintTop_toBottomOf="@+id/btnERC" />

    <TextView
        android:id="@+id/tvHistorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/etErrores"
        app:layout_constraintStart_toEndOf="@+id/etErrores"
        app:layout_constraintTop_toTopOf="@+id/etErrores" />
</androidx.constraintlayout.widget.ConstraintLayout>