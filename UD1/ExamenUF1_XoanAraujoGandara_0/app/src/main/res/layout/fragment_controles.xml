<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btnArriba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arriba"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAbajo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abajo"
        app:layout_constraintEnd_toEndOf="@+id/btnArriba"
        app:layout_constraintStart_toStartOf="@+id/btnArriba"
        app:layout_constraintTop_toBottomOf="@+id/btnArriba" />

    <Button
        android:id="@+id/btnIzq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="izq"
        app:layout_constraintBottom_toBottomOf="@+id/btnAbajo"
        app:layout_constraintEnd_toStartOf="@+id/btnAbajo"
        app:layout_constraintTop_toBottomOf="@+id/btnArriba" />

    <Button
        android:id="@+id/btnDer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="der"
        app:layout_constraintBottom_toBottomOf="@+id/btnAbajo"
        app:layout_constraintStart_toEndOf="@+id/btnAbajo"
        app:layout_constraintTop_toBottomOf="@+id/btnArriba" />

    <Button
        android:id="@+id/btnEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="enter"
        app:layout_constraintBottom_toTopOf="@+id/btnDer"
        app:layout_constraintStart_toEndOf="@+id/btnArriba" />

</androidx.constraintlayout.widget.ConstraintLayout>